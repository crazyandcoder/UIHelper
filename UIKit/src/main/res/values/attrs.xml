<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WheelView">
        <!--文字大小-->
        <attr name="wv_textSize" format="dimension" />
        <!--是否自适应文字大小以完全显示过长的文字-->
        <attr name="wv_autoFitTextSize" format="boolean" />
        <!--文字对齐方式-->
        <attr name="wv_textAlign" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--文字距离边界的外边距-->
        <attr name="wv_textBoundaryMargin" format="dimension" />
        <!--未选中文字颜色-->
        <attr name="wv_normalItemTextColor" format="color" />
        <!--被选中的文字颜色-->
        <attr name="wv_selectedItemTextColor" format="color" />
        <!--行间距-->
        <attr name="wv_lineSpacing" format="dimension" />
        <!--数据为Integer类型时是否需要转换-->
        <attr name="wv_integerNeedFormat" format="boolean" />
        <!--Integer类型转换格式-->
        <attr name="wv_integerFormat" format="string" />

        <!--可见item数-->
        <attr name="wv_visibleItems" format="integer" />
        <!--当前选中下标-->
        <attr name="wv_selectedItemPosition" format="integer" />
        <!--是否循环滚动-->
        <attr name="wv_cyclic" format="boolean" />

        <!--是否显示分割线-->
        <attr name="wv_showDivider" format="boolean" />
        <!--分割线类型-->
        <attr name="wv_dividerType" format="enum">
            <enum name="fill" value="0" />
            <enum name="wrap" value="1" />
        </attr>
        <!--分割线颜色-->
        <attr name="wv_dividerColor" format="color" />
        <!--分割线高度-->
        <attr name="wv_dividerHeight" format="dimension" />
        <!--wrap类型下分割线内边距-->
        <attr name="wv_dividerPaddingForWrap" format="dimension" />


        <!--是否是弯曲（3D）效果-->
        <attr name="wv_curved" format="boolean" />
        <!--弯曲（3D）效果左右圆弧偏移效果方向 可向指定方向偏移-->
        <attr name="wv_curvedArcDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--弯曲（3D）效果左右圆弧偏移效果方向系数 偏移系数-->
        <attr name="wv_curvedArcDirectionFactor" format="float" />
        <!--选中后折射的偏移(弯曲（3D）效果和普通效果都适用) 与字体大小的比值，1为不偏移 越小偏移越明显-->
        <attr name="wv_refractRatio" format="float" />
        <!-- Deprecated 已过时 请使用 wv_refractRatio -->
        <attr name="wv_curvedRefractRatio" format="float" />

        <!--是否绘制选中区域-->
        <attr name="wv_drawSelectedRect" format="boolean" />
        <!--选中区域颜色-->
        <attr name="wv_selectedRectColor" format="color" />
        <!--选中区域/分割线上下偏移，通过移动分割线上下限制的位置来实现扩大/缩小显示区域-->
        <attr name="wv_dividerOffset" format="dimension" />
    </declare-styleable>


    <declare-styleable name="YearWheelView">
        <attr name="startYear" format="integer" />
        <attr name="endYear" format="integer" />
        <attr name="selectedYear" format="integer" />
    </declare-styleable>

    <declare-styleable name="MonthWheelView">
        <attr name="selectedMonth" format="integer" />
    </declare-styleable>

    <declare-styleable name="DayWheelView">
        <attr name="year" format="integer" />
        <attr name="month" format="integer" />
        <attr name="selectedDay" format="integer" />
    </declare-styleable>


    <declare-styleable name="DateTimePickerView">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="showLabel" format="boolean" />
    </declare-styleable>


    <declare-styleable name="WeekLabelView">
        <attr name="cl_labelWeekendTextColor" format="color" />
        <attr name="cl_labelTextColor" format="color" />
        <attr name="cl_labelTextSize" format="dimension" />
        <attr name="cl_labelArr" format="reference" />
    </declare-styleable>

    <!--monthView-->
    <declare-styleable name="MonthCalendarView">
        <attr name="cl_textColor" format="color" />
        <attr name="cl_monthPaddingLeft" format="dimension" />
        <attr name="cl_monthPaddingTop" format="dimension" />
        <attr name="cl_monthPaddingRight" format="dimension" />
        <attr name="cl_monthPaddingBottom" format="dimension" />
        <attr name="cl_cornerRadius" format="dimension" />
        <attr name="cl_selectTextColor" format="color" />
        <attr name="cl_weekendTextColor" format="color" />
        <attr name="cl_disTextColor" format="color" />
        <attr name="cl_sameTextColor" format="color" />
        <attr name="cl_topTextColor" format="color" />
        <attr name="cl_selectMaxRange" format="integer" />
        <attr name="cl_textSize" format="dimension" />
        <attr name="cl_textStyle" format="flags">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />>
        </attr>
        <attr name="cl_topTextSize" format="dimension" />
        <attr name="cl_bottomTextSize" format="dimension" />
        <attr name="cl_firstTopMargin" format="dimension" />
        <attr name="cl_secondTopMargin" format="dimension" />
        <attr name="cl_thirdTopMargin" format="dimension" />
        <attr name="cl_dividerHeight" format="dimension" />
        <attr name="cl_dividerColor" format="color" />
        <attr name="cl_firstSelectDayText" format="string" />
        <attr name="cl_lastSelectDayText" format="string" />
        <attr name="cl_rowHeight" format="dimension" />
        <attr name="cl_selectBgDrawable" format="reference" />
        <attr name="cl_selectRangeBgDrawable" format="reference" />
    </declare-styleable>

</resources>